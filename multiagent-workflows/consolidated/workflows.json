{
  "workflows": [
    {
      "name": "Full-Stack Application Generation",
      "description": "Transforms business requirements and UI mockups into a complete, deployable full-stack application.",
      "agents": [
        {"id": "vision_agent", "role": "Analyzes UI mockups"},
        {"id": "requirements_agent", "role": "Parses business requirements"},
        {"id": "architecture_agent", "role": "Designs system architecture"},
        {"id": "database_agent", "role": "Creates database schema"},
        {"id": "api_agent", "role": "Designs API contracts"},
        {"id": "code_generator", "role": "Generates backend/frontend code"},
        {"id": "reviewer_agent", "role": "Reviews for security and quality"},
        {"id": "test_agent", "role": "Generates comprehensive tests"},
        {"id": "documentation_agent", "role": "Generates documentation"}
      ],
      "inputs": [
        {"name": "requirements", "type": "text", "required": true},
        {"name": "mockup_path", "type": "file", "required": false},
        {"name": "tech_stack", "type": "object", "required": false}
      ],
      "outputs": [
        {"name": "application", "type": "directory"},
        {"name": "documentation", "type": "directory"},
        {"name": "tests", "type": "directory"}
      ]
    },
    {
      "name": "Legacy Code Refactoring & Modernization",
      "description": "Analyzes legacy codebases and systematically refactors them to modern patterns while preserving behavior.",
      "agents": [
        {"id": "archaeologist_agent", "role": "Analyzes legacy code structure"},
        {"id": "dependency_agent", "role": "Maps dependencies and coupling"},
        {"id": "pattern_agent", "role": "Detects anti-patterns and code smells"},
        {"id": "test_analyst_agent", "role": "Analyzes existing test coverage"},
        {"id": "safety_net_agent", "role": "Generates characterization tests"},
        {"id": "planner_agent", "role": "Creates refactoring roadmap"},
        {"id": "transformer_agent", "role": "Applies code transformations"},
        {"id": "migration_agent", "role": "Migrates to modern frameworks"},
        {"id": "validator_agent", "role": "Verifies behavioral equivalence"},
        {"id": "documentation_agent", "role": "Updates documentation"}
      ],
      "inputs": [
        {"name": "codebase_path", "type": "directory", "required": true},
        {"name": "target_framework", "type": "string", "required": false},
        {"name": "constraints", "type": "object", "required": false}
      ],
      "outputs": [
        {"name": "refactored_code", "type": "directory"},
        {"name": "migration_plan", "type": "file"},
        {"name": "test_suite", "type": "directory"},
        {"name": "change_log", "type": "file"}
      ]
    },
    {
      "name": "Intelligent Bug Triage & Automated Fixing",
      "description": "Analyzes bug reports, reproduces issues, identifies root causes, and generates fixes with regression tests.",
      "agents": [
        {"id": "bug_analyst_agent", "role": "Parses bug reports"},
        {"id": "reproduction_agent", "role": "Creates minimal reproduction cases"},
        {"id": "tracer_agent", "role": "Traces execution to find failure points"},
        {"id": "root_cause_agent", "role": "Identifies fundamental issues"},
        {"id": "fix_generator_agent", "role": "Generates candidate fixes"},
        {"id": "test_generator_agent", "role": "Creates regression tests"},
        {"id": "validator_agent", "role": "Validates fixes work correctly"},
        {"id": "side_effect_agent", "role": "Checks for unintended consequences"},
        {"id": "documentation_agent", "role": "Documents the fix"},
        {"id": "pr_agent", "role": "Creates pull request content"}
      ],
      "inputs": [
        {"name": "bug_report", "type": "text", "required": true},
        {"name": "codebase_path", "type": "directory", "required": true},
        {"name": "priority", "type": "string", "required": false}
      ],
      "outputs": [
        {"name": "fix_patch", "type": "file"},
        {"name": "regression_tests", "type": "directory"},
        {"name": "pull_request", "type": "object"},
        {"name": "analysis_report", "type": "file"}
      ]
    }
  ]
}